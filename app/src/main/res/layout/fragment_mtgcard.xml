                    android:layout_height="wrap_content"
                    android:textColor="@color/colorLight"
                    android:layout_marginVertical="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_mtgcard_legalities_duel_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorLight"
                    android:layout_marginVertical="5dp"
                    android:text="Commander duel : " />


                <TextView
                    android:id="@+id/fragment_mtgcard_legalities_duel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorLight"
                    android:layout_marginVertical="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_mtgcard_legalities_oldschool_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorLight"
                    android:layout_marginVertical="5dp"
                    android:text="Oldschool : " />


                <TextView
                    android:id="@+id/fragment_mtgcard_legalities_oldschool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorLight"
                    android:layout_marginVertical="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>